<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: linear-gradient(to bottom right, #e0eafc, #cfdef3);" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ijse.gdse72.testchat.controller.AddUserPageController">
   <children>
      <VBox alignment="CENTER" spacing="30.0" layoutX="100.0" layoutY="50.0" prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
         <children>
            <Label text="Add to the Chat" style="-fx-text-fill: #2c3e50;">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
               <effect>
                  <DropShadow color="rgba(0,0,0,0.1)" radius="3" spread="0.5"/>
               </effect>
            </Label>

            <TextField fx:id="txtName" prefWidth="250.0" style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 8 15; -fx-font-size: 14;" promptText="Enter username">
               <effect>
                  <DropShadow color="rgba(0,0,0,0.05)" radius="5" spread="0.3"/>
               </effect>
            </TextField>

            <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#addOnAction" prefWidth="200.0" style="-fx-background-radius: 15; -fx-background-color: linear-gradient(to right, #4facfe, #00f2fe); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-padding: 8 20;" text="Add to the chat">
               <effect>
                  <DropShadow color="rgba(79,172,254,0.4)" radius="5" spread="0.3"/>
               </effect>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>