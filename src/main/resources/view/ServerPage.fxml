<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ijse.gdse72.testchat.controller.ServerPageController">
   <children>
      <ScrollPane fx:id="scrollpane" layoutX="20.0" layoutY="20.0" prefHeight="350.0" prefWidth="660.0" style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: rgba(0,0,0,0.1); -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
         <content>
            <VBox fx:id="vbox" prefHeight="345.0" prefWidth="653.0" style="-fx-background-color: transparent; -fx-padding: 10; -fx-spacing: 10;" />
         </content>
      </ScrollPane>

      <TextField fx:id="txtMsg" layoutX="20.0" layoutY="390.0" prefHeight="40.0" prefWidth="520.0" promptText="Type your message here..." style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #d3d3d3; -fx-padding: 0 15; -fx-font-size: 14; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" />

      <Button fx:id="btnAdd" layoutX="550.0" layoutY="390.0" mnemonicParsing="false" onAction="#addOnAction" prefHeight="40.0" prefWidth="40.0" style="-fx-background-radius: 20; -fx-background-color: linear-gradient(to right, #4facfe, #00f2fe); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);" text="+" />

      <Button fx:id="btnSend" layoutX="600.0" layoutY="390.0" mnemonicParsing="false" onAction="#sendOnAction" prefHeight="40.0" prefWidth="80.0" style="-fx-background-radius: 20; -fx-background-color: linear-gradient(to right, #43e97b, #38f9d7); -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);" text="Send" />

                              <ImageView fx:id="imgView" fitHeight="80.0" fitWidth="137.0" layoutX="403.0" layoutY="390.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);" />
   </children>
</AnchorPane>
